@model IList<ExamtwoClass>

@{
    ViewBag.Title = "Manage Lucas";
}

<a class="btn btn-primary" asp-action="Create">Create new</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>lucas il fait leu mec</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id"> Delete </a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id"> Edit</a> 
                </td> 
            </tr>
        }
    </tbody>
</table>